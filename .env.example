# Environment Configuration Template
# Copy this file to .env and fill in your values

# ===== Required Configuration =====

# Gmail label ID for job hunting emails
# Get this from Gmail API or use the helper script in INSTALL.md
# Example: Label_1234567890123456789
GMAIL_JOBHUNT_LABEL_ID=

# ===== Optional Configuration =====

# Django secret key (will auto-generate if not provided)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Example: localhost,127.0.0.1,example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database path (default: db/job_tracker.db)
DATABASE_PATH=db/job_tracker.db

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===== ML Model Configuration =====

# Minimum confidence threshold for auto-review (0.0-1.0)
# Messages above this threshold are marked as reviewed automatically
AUTO_REVIEW_CONFIDENCE=0.85

# Minimum confidence for ML classification (0.0-1.0)
# Below this, rule-based fallback is used
ML_CONFIDENCE_THRESHOLD=0.55

# ===== Gmail Ingestion Configuration =====

# Default days to look back when ingesting
DEFAULT_DAYS_BACK=7

# Maximum messages per ingestion batch
MAX_MESSAGES_PER_BATCH=500

# ===== Ghosted Detection Configuration =====

# Ghosted detection threshold (in days)
# Default: 30 days
# If a company has no activity (no messages sent/received) for this many days,
# applications to that company will be marked as "ghosted" when running:
#   python manage.py mark_ghosted
GHOSTED_DAYS_THRESHOLD=30

# ===== Notes =====
# - Never commit this file to version control
# - See INSTALL.md for detailed setup instructions
# - All paths are relative to project root
