# Environment Configuration Template
# Copy this file to .env and fill in your values

# ===== Required Configuration =====

# Gmail label ID for job hunting emails
# 
# HOW TO GET THIS:
# Method 1: Run the helper script:
#   python get_label_id.py
#
# Method 2: Use Python one-liner:
#   python -c "from gmail_auth import get_gmail_service; service = get_gmail_service(); labels = service.users().labels().list(userId='me').execute(); [print(f\"{l['name']}: {l['id']}\") for l in labels['labels']]"
#
# Method 3: See ENV_CONFIGURATION_GUIDE.md for detailed instructions
#
# Example: Label_1234567890123456789
GMAIL_JOBHUNT_LABEL_ID=

# Gmail root filter label (optional)
# Used for organizing sub-labels under a parent label
# This is the name prefix for your job hunting labels
# Example: If you have labels like "#job-hunt/Applied", "#job-hunt/Interview"
# then set this to "#job-hunt"
# Default: #job-hunt
GMAIL_ROOT_FILTER_LABEL=#job-hunt

# ===== Optional Configuration =====

# Django secret key (will auto-generate if not provided)
# 
# HOW TO GET THIS:
# Generate a random secret key:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# IMPORTANT: Keep this secret! Never share or commit to git.
#
# Example: django-insecure-xy9#2k$mz@4n8v!p7q&r3s*t6u+w-a=b%c^d_e(f)g{h|i}j
DJANGO_SECRET_KEY=

# Debug mode (True for development, False for production)
DEBUG=True

# Default start date for reports (YYYY-MM-DD)
REPORTING_DEFAULT_START_DATE=2025-02-14

# Optional: Your email to exclude your replies from statistics
USER_EMAIL_ADDRESS=your-email@gmail.com

# Allowed hosts (comma-separated, no spaces)
# Example: localhost,127.0.0.1,example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database path (default: db/job_tracker.db)
DATABASE_PATH=db/job_tracker.db

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===== ML Model Configuration =====

# Minimum confidence threshold for auto-review (0.0-1.0)
# Messages above this threshold are marked as reviewed automatically
AUTO_REVIEW_CONFIDENCE=0.85

# Minimum confidence for ML classification (0.0-1.0)
# Below this, rule-based fallback is used
ML_CONFIDENCE_THRESHOLD=0.55

# ===== Gmail Ingestion Configuration =====

# Default days to look back when ingesting
DEFAULT_DAYS_BACK=7

# Maximum messages per ingestion batch
MAX_MESSAGES_PER_BATCH=500

# ===== Ghosted Detection Configuration =====

# Ghosted detection threshold (in days)
# Default: 30 days
# If a company has no activity (no messages sent/received) for this many days,
# applications to that company will be marked as "ghosted" when running:
#   python manage.py mark_ghosted
GHOSTED_DAYS_THRESHOLD=30

# ===== Notes =====
# - Never commit this file to version control
# - See INSTALL.md for detailed setup instructions
# - All paths are relative to project root
